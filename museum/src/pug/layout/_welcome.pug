section.section.section_dark.welcome.fullscreen_hidden
	div.container.welcome__container
		div.welcome__slider
			div.welcome__slider_container
				img.welcome__img.welcome__img_active(src='assets/img/welcome-slider/1.webp' alt='')
				img.welcome__img(src='assets/img/welcome-slider/2.webp' alt='')
				img.welcome__img(src='assets/img/welcome-slider/3.webp' alt='')
				img.welcome__img(src='assets/img/welcome-slider/4.webp' alt='')
				img.welcome__img(src='assets/img/welcome-slider/5.webp' alt='')
		div.welcome__content
			h1.section__title.section__title_light Welcome 
			h2.section__title.section__title_light.section__title_welcome to the Louvre
			p.welcome__text From the castle to the museum
			include ../components/_button-discover.pug
		div.welcome__controls
			div.welcome__controls_container
				div.controls__num
					output.controls__item(id='controls__output') 01
