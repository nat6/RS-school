					div.pagination_square.pagination_square_active
					div.pagination_square
					div.pagination_square
					div.pagination_square
					div.pagination_square
				div.controls__buttons
					button.button_left.welcome__button
						span.controls__arrow.controls__arrow_left.welcome__prev(id='welcome__prev')
					button.button_right.welcome__button
						span.controls__arrow.controls__arrow_right.welcome__next(id='welcome__next')
		div.nav-add
			div.nav-add__images
				img.nav-add__img(src='assets/img/nav-add1.webp' loading='lazy' alt='')
				div.nav-add__img_container
					img.nav-add__img_small(src='assets/img/nav-add2.webp' loading='lazy' alt='')
					img.nav-add__img_small(src='assets/img/nav-add3.webp' loading='lazy' alt='')
			div.nav-add__social
				include ../components/_social.pug